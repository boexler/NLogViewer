<Window x:Class="NLogViewer.MaterialDesign.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dj="clr-namespace:DJ;assembly=NLogViewer"
        mc:Ignorable="d" Height="450" Width="800"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Margin="5">
            <Button DockPanel.Dock="Left" Width="120" Content="Open Popup" Click="Button_OpenPopup_Click" />
            <Button DockPanel.Dock="Left" Width="120" Content="Add new Task" Click="Button_AddTask_Click" Margin="5,0,0,0"/>
            
            <!-- Column Visibility Controls -->
            <Separator Margin="10,0" />
            <TextBlock Text="Column Visibility:" VerticalAlignment="Center" Margin="5,0,5,0" />
            <CheckBox Content="ID" IsChecked="{Binding ElementName=NLogViewer1, Path=ShowIdColumn}" Margin="2,0" VerticalAlignment="Center" />
            <CheckBox Content="Level" IsChecked="{Binding ElementName=NLogViewer1, Path=ShowLevelColumn}" Margin="2,0" VerticalAlignment="Center" />
            <CheckBox Content="TimeStamp" IsChecked="{Binding ElementName=NLogViewer1, Path=ShowTimeStampColumn}" Margin="2,0" VerticalAlignment="Center" />
            <CheckBox Content="LoggerName" IsChecked="{Binding ElementName=NLogViewer1, Path=ShowLoggerNameColumn}" Margin="2,0" VerticalAlignment="Center" />
        </WrapPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TabControl Grid.RowSpan="10" x:Name="TabControl1">
                <TabItem Header="Messages">
                    <dj:NLogViewer x:Name="NLogViewer1" Grid.Row="2" MaxCount="1000" TargetName="target1" ShowTimeStampColumn="False"/>
                </TabItem>
                <TabItem Header="Warnings/Errors">
                    <dj:NLogViewer MaxCount="1000" TargetName="target2"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>